# FlopHero Observability Stack Configuration
# Copy this file to .env and update values

# ==========================================================================
# Grafana (main account)
# ==========================================================================
GRAFANA_ROOT_URL=https://monitoring.gametrainer.dev
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# ==========================================================================
# Prometheus
# ==========================================================================
PROMETHEUS_EXTERNAL_URL=https://monitoring.gametrainer.dev/prometheus/

# ==========================================================================
# Alertmanager
# ==========================================================================
ALERTMANAGER_EXTERNAL_URL=https://monitoring.gametrainer.dev/alertmanager/

# ==========================================================================
# Nginx basic auth (Prometheus / Alertmanager)
# Create nginx/.htpasswd on server: htpasswd -cb nginx/.htpasswd prometheus <pass> && htpasswd -b nginx/.htpasswd alertmanager <pass>
# ==========================================================================

# ==========================================================================
# Slack Webhooks (for Alertmanager)
# ==========================================================================
SLACK_WEBHOOK_PRODUCTION=https://hooks.slack.com/services/xxx/xxx/xxx
SLACK_WEBHOOK_STAGING=https://hooks.slack.com/services/xxx/xxx/xxx
SLACK_WEBHOOK_TESTING=https://hooks.slack.com/services/xxx/xxx/xxx
